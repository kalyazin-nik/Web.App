@model List<TaskTableModel>;
@{
    ViewData["Title"] = "List Tasks";
}

<div>
    <h2>Список задач</h2><br />
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <a class="btn btn-primary btn-sm" href="/TaskTable/Create">Создать задачу</a>
        </div>
        <div class="col-md-auto">
            <form method="post" action="/TaskTable/Update">
                <input type="hidden" name="dataUpdate" id="dataUpdate" />
                <button type="submit" class="btn btn-primary btn-sm">Изменить задачу</button>
            </form>
        </div>
        <div class="col col-lg-2">
            <form method="post" action="/TaskTable/Delete">
                <input type="hidden" name="dataDelete" id="dataDelete" />
                <button type="submit" class="btn btn-danger btn-sm">Удалить задачу</button>
            </form>
        </div>
    </div>
</div>
<div><br /></div>
<div>
    <table class="table-t table table-hover">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Название</th>
                <th scope="col">Описание</th>
                <th scope="col">Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.StatusName</td>
                    <td hidden>@item.StatusId</td>
                </tr>
            }
        </tbody>
    </table>
</div>
